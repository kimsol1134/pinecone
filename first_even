def first_even(numbers):
    for i in range(len(numbers)):
        if numbers[i] % 2 == 0:
            return (numbers[i], i + 1) 
    return 0

first_even([1, 3, 5, 8, 10, 21])


def first_even(numbers):
    for index, value in enumerate(numbers):
        if value % 2 == 0:
            return (value, index + 1) 
    return 0

first_even([1, 3, 5, 8, 10, 21])
